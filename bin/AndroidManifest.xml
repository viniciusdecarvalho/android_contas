<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vinniccius.contas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:name="App"
        android:icon="@drawable/contas_favicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="br.com.vinniccius.contas.activity.MainActivity" android:icon="@drawable/contas_favicon" android:label="@string/app_name" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ContaActivity" android:label="@string/conta_detalhes" android:theme="@style/AppTheme"></activity>
        <activity android:name=".activity.ContasReceberActivity" android:label="@string/conta_receber" android:theme="@style/AppTheme" android:icon="@drawable/contas_receber"></activity>
        <activity android:name=".activity.ContasPagarActivity" android:label="@string/conta_pagar" android:theme="@style/AppTheme" android:icon="@drawable/contas_pagar"></activity>
        <activity android:name=".activity.ContasTotaisActivity" android:theme="@style/AppTheme" android:icon="@drawable/contas"></activity>
        
    </application>

</manifest>
